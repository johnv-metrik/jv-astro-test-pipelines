<section>
  <div class="customer">
    <div class="form-reset-password">
      {% form 'reset_customer_password' %}

        <h1 class="customer__title">{{ 'customer.reset_password.title' | t }}</h1>

        <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

        {{ form.errors | default_errors }}

        <div class="field {%- if form.errors contains 'password' %} field--error {%- endif %}">
          <label for="ResetPassword">{{ 'customer.reset_password.password' | t }}</label>
          <input 
            type="password"
            name="customer[password]"
            id="ResetPassword"
            placeholder="{{ 'general.misc.generic_placeholder' | t }}"
            required
          >
        </div>

        <div class="field {%- if form.errors contains 'password_confirmation' %} field--error {%- endif %}">
          <label for="PasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
          <input 
            type="password"
            name="customer[password_confirmation]"
            id="PasswordConfirmation"
            placeholder="{{ 'general.misc.generic_placeholder' | t }}"
            required
          >
        </div>

        <div class="customer__buttons">
          <button type="submit" class="button button--primary">{{ 'customer.reset_password.submit' | t }}</button>
        </div>
      {% endform %}
    </div>
  </div>
</section>
